<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android.support.v7.cardview:cardBackgroundColor="@android:color/white"
    android.support.v7.cardview:cardCornerRadius="2dp"
    android.support.v7.cardview:cardElevation="3dp"
    android.support.v7.cardview:cardUseCompatPadding="true"
    android.support.v7.cardview:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/placeholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="#E0E0E0"
            android:src="@drawable/ic_person"
            android:tint="#757575" />

        <TextView
            android:id="@+id/person_name"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/placeholder" />

        <TextView
            android:id="@+id/person_date_of_birth"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/person_name"
            android:layout_toEndOf="@id/placeholder" />

        <TextView
            android:id="@+id/person_phone_number"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/person_zip_code"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/person_phone_number" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
