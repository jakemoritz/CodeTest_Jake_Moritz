<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android.support.v7.cardview:cardBackgroundColor="@android:color/white"
    android.support.v7.cardview:cardElevation="3dp"
    android.support.v7.cardview:cardUseCompatPadding="true"
    android.support.v7.cardview:contentPadding="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Name" />

        <EditText
            android:id="@+id/person_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@id/person_name"/>

        <TextView
            android:id="@+id/person_zip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55555"
            android:layout_below="@id/person_date_of_birth"/>

        <TextView
            android:id="@+id/person_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555-555-5555"
            android:layout_below="@id/person_zip_code"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>
